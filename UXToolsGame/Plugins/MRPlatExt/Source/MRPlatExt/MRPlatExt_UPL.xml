<?xml version="1.0" encoding="utf-8"?>
<root xmlns:android="http://schemas.android.com/apk/res/android">
    <init>
    </init>

    <gameActivityClassAdditions>
    </gameActivityClassAdditions>

	<!-- optional files or directories to copy to Intermediate/Android/APK -->
	<resourceCopies>
		<isArch arch="armeabi-v7a">
			<log text="Copying arm32 libopenxr_loader.so"/>
            <copyFile src="$S(PluginDir)/ThirdParty/armeabi-v7a/libopenxr_loader.so"
                              dst="$S(BuildDir)/libs/armeabi-v7a/libopenxr_loader.so" />
		</isArch>
		<isArch arch="arm64-v8a">
			<log text="Copying arm64 libopenxr_loader.so"/>
            <copyFile src="$S(PluginDir)/ThirdParty/arm64-v8a/libopenxr_loader.so"
                              dst="$S(BuildDir)/libs/arm64-v8a/libopenxr_loader.so" />
		</isArch>
	</resourceCopies>
</root>
